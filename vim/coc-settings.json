{
    "languageserver": {
        "svls": {
            "command": "svls",
            "filetypes": ["systemverilog"]
        },
        "clangd": {
            "command": "clangd",
            "filetypes": ["c", "cpp"]
        },
        "ocaml-lsp": {
            "command": "opam",
            "args": ["config", "exec", "--", "ocamllsp"],
            "filetypes": ["ocaml", "reason"]
        },
        "nasm-lsp": {
            "command": "nasm-lsp",
            "filetypes": ["asm"]
        },
        "haskell": {
            "command": "haskell-language-server-wrapper",
            "args": ["--lsp"],
            "rootPatterns": [
                "*.cabal",
                "stack.yaml",
                "cabal.project",
                "package.yaml",
                "hie.yaml"
            ],
            "filetypes": ["haskell", "lhaskell"]
        }
    },
    "coc.preferences.formatOnSaveFiletypes": ["*"],
    "snippets.userSnippetsDirectory": "~/.dotfiles/vim/snippets",
    "coc.preferences.rootPatterns": [
        ".git",
        ".hg",
        ".projections.json",
        "package.json",
        ".vimspector.json"
    ],
    "eslint.autoFixOnSave": true,
    "eslint.options": {
        "configFile": "/home/beleap/.dotfiles/vim/.eslintrc.js"
    },
    "eslint.packageManager": "yarn",
    "cSpell.userWords": ["dotfiles", "clangd", "ARQ", "px", "klue"],
    "prettier.trailingComma": "all",
    "prettier.tabWidth": 4,
    "coc.preferences.promptInput": false,
    "explorer.width": 30,
    "explorer.file.showHiddenFiles": true,
    "explorer.file.autoReveal": false,
    "explorer.icon.enableVimDevicons": true,
    "explorer.icon.enableNerdfont": true
}
