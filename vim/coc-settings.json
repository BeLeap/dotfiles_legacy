{
    "languageserver": {
        "svls": {
            "command": "svls",
            "filetypes": ["systemverilog"]
        },
        "clangd": {
            "command": "clangd",
            "filetypes": ["c", "cpp"]
        },
        "ocaml-lsp": {
            "command": "opam",
            "args": ["config", "exec", "--", "ocamllsp"],
            "filetypes": ["ocaml", "reason"]
        },
        "nasm-lsp": {
            "command": "nasm-lsp",
            "filetypes": ["asm"]
        },
        "haskell": {
            "command": "haskell-language-server-wrapper",
            "args": ["--lsp"],
            "rootPatterns": [
                "*.cabal",
                "stack.yaml",
                "cabal.project",
                "package.yaml",
                "hie.yaml"
            ],
            "filetypes": ["haskell", "lhaskell"]
        }
    },
    "coc.preferences.formatOnSaveFiletypes": ["*"],
    "snippets.userSnippetsDirectory": "~/.dotfiles/vim/snippets",
    "coc.preferences.rootPatterns": [
        ".git",
        ".hg",
        ".projections.json",
        "package.json",
        ".vimspector.json"
    ],
    "eslint.autoFixOnSave": true,
    "eslint.options": {
        "configFile": "/home/beleap/.dotfiles/vim/.eslintrc.js"
    },
    "eslint.packageManager": "yarn",
    "cSpell.userWords": [
        "ARQ",
        "chrono",
        "clangd",
        "codegen",
        "dotenv",
        "dotfiles",
        "foldl",
        "foldr",
        "klue",
        "postgres",
        "px",
        "recip",
        "refrences",
        "scanl",
        "varchar"
    ],
    "prettier.trailingComma": "all",
    "prettier.tabWidth": 4,
    "coc.preferences.promptInput": false,
    "explorer.width": 30,
    "explorer.file.showHiddenFiles": true,
    "explorer.file.autoReveal": false,
    "explorer.icon.enableVimDevicons": true,
    "explorer.icon.enableNerdfont": true,
    "rpc.idleText": "노는 중",
    "rpc.lowerDetailsIdle": "노는 중",
    "rpc.detailsIdle": "일하는 척하는 중",
    "rpc.lowerDetailsEditing": "{workspace}",
    "rpc.detailsEditing": "{filename}와 씨름하는 중",
    "rpc.lowerDetailsViewing": "{workspace}",
    "rpc.detailsViewing": "{filename}을 분석하는 중",
    "rpc.smallImage": "세계 최고의 에디터",
    "rpc.largeImage": "{LANG}",
    "rpc.largeImageIdle": "노는 중",
    "rpc.lowerDetailsInExplorer": "{workspace}",
    "rpc.detailsInExplorer": "{workspace}를 탐험하는 중",
    "rpc.largeImageInExplorer": "탐험 중",
    "metals.javaHome": "C:\\Program Files\\Java\\jdk-11.0.10"
}
