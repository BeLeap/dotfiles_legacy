{
  "languageserver": {
    "svls": {
      "command": "svls",
      "filetypes": ["systemverilog"]
    },
    "clangd": {
      "command": "clangd",
      "filetypes": ["c", "cpp"]
    },
    "ocaml-lsp": {
      "command": "opam",
      "args": ["config", "exec", "--", "ocamllsp"],
      "filetypes": ["ocaml", "reason"]
    },
    "nasm-lsp": {
      "command": "nasm-lsp",
      "filetypes": ["asm"]
    }
  },
  "coc.preferences.formatOnSaveFiletypes": ["*"],
  "snippets.userSnippetsDirectory": "~/.dotfiles/vim/snippets",
  "coc.preferences.rootPatterns": [
    ".git",
    ".hg",
    ".projections.json",
    "package.json",
    ".vimspector.json"
  ],
  "eslint.autoFixOnSave": true,
  "eslint.options": {
    "configFile": "/home/beleap/.dotfiles/vim/.eslintrc.js"
  },
  "eslint.packageManager": "yarn",
  "cSpell.userWords": ["dotfiles", "clangd"]
}
