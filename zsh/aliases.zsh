# Neovim
alias vim="nvim"

# Short-handed commands
alias v="vim"
alias p="python3"
alias j="z"

# Configuration Files
alias vimrc="pushd ~/.config/nvim && vim ./init.vim && popd"
alias zshrc="vim ~/.zshrc"
alias sozsh="source ~/.zshrc"
alias tmuxconf="vim ~/.tmux.conf"

# Typo
alias clera="clear"
alias eixt="exit"

# Rust Commands
alias ls="exa"
alias ll="exa -l"
alias lt="exa -l -T -L2"
alias la="exa -la"

alias cat="bat"
alias od="hexyl"
alias grep="rg"

# Trash-cli
alias tput="trash-put"
alias tlist="trash-list"
alias tempty="trash-empty"
